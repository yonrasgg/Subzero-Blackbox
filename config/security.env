# Security configuration for AI/ML libraries
# This file contains security settings to mitigate known vulnerabilities

# PyTorch Security Settings
# Mitigate torch.load RCE vulnerability
TORCH_LOAD_WEIGHTS_ONLY = True

# Transformers Security Settings
# Disable dangerous pickle deserialization
TRANSFORMERS_NO_UNSAFE_SERIALIZE = 1

# Safe serialization methods only
TRANSFORMERS_USE_SAFE_SERIALIZATION = 1

# Disable automatic code execution in model files
TRANSFORMERS_NO_CODE_EXECUTION = 1

# Sentence Transformers Security
# Use safe loading methods
SENTENCE_TRANSFORMERS_SAFE_LOADING = 1